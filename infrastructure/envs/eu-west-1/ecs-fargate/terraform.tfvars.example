# terraform.tfvars.example

# AWS region to deploy to
region = "eu-west-1"

# Application name
app_name = "cloudride-challenge"

# Port the container listens on
container_port = 5000

# Full container image URI (ECR or Docker Hub)
# Example: "123456789012.dkr.ecr.eu-west-1.amazonaws.com/app_name:latest"
container_image = "your-ecr-or-dockerhub-image-uri"

# Email address for alert notifications
alert_email = "chen@example.com"